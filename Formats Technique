*&---------------------------------------------------------------------*

REPORT  ZFORMATTING_R.
DATA: g(5) TYPE c VALUE 'Hello',
 f(5) TYPE c VALUE 'Dolly'.

WRITE: g, f.

WRITE: /10 g,
  /  f UNDER g.

WRITE: / g NO-GAP, f.
